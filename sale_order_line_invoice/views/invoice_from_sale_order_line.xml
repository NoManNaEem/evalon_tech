<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_from_sale_order_line" model="ir.ui.view">
        <field name="name">invoice.from.sale.order.line</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">2</field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_template_id']" position="after">
                <button name="action_open_invoice_percentage_wizard"
                        string="Create Invoice"
                        class="btn-primary"
                        type="object"
                        invisible="state != 'sale' or no_remaining_percentage or no_remaining_amount"
                />
            </xpath>

        </field>
    </record>
</odoo>