<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_res_config_settings_inherit_pos" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <setting string="Custom Fixed Discount"
                         help="Toggle it to enable fixed discount overriding the point of sale discount functionality.">
                    <field name="fixed_discount_pos"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
